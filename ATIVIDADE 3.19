#include <stdio.h>

int main() {
  int numero, somaDivisores;
  printf("Digite um número inteiro: ");
  scanf("%i", &numero);

  for (int i = 1; i < numero; i++){
    if (numero % i == 0){
      somaDivisores += i;
      }
  }
  if(somaDivisores >= numero){
    printf("O número %d é perfeito!", numero);
    }
  else{
    printf("O número %d não é perfeito!", numero);
    }
  return 0;
}
